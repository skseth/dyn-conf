{
    "name": "dyn-conf",
    "version": "1.0.0-alpha",
    "description": "Hierarchical configuration with indirection for secrets, and change notifications",
    "main": "out/dist/index.js",
    "types": "out/dist/index.d.ts",
    "scripts": {
        "prepublish": "npm run tsc",
        "test": "TS_NODE_PROJECT=src mocha",
        "test:cov": "TS_NODE_PROJECT=src nyc mocha",
        "coverage": "nyc report --reporter=text-lcov > out/coverage.lcov && codecov -f out/coverage.lcov",
        "tsc": "tsc -p src/tsconfig.json"
    },
    "keywords": [
        "configuration",
        "secure"
    ],
    "author": "Samir",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/skseth/dyn-conf"
    },
    "devDependencies": {
        "@types/minimist": "^1.2.0",
        "@types/mocha": "^2.2.41",
        "@types/node": "^8.0.4",
        "codecov": "^2.2.0",
        "mocha": "^3.4.2",
        "nyc": "^11.0.3",
        "ts-node": "^3.1.0",
        "typescript": "^2.4.1"
    },
    "dependencies": {
        "minimist": "^1.2.0"
    },
    "nyc": {
        "include": [
            "src/*.ts"
        ],
        "exclude": [
            "examples",
            "dist"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "lcov",
            "text"
        ],
        "report-dir": "out/coverage",
        "temp-directory": "out/.nyc_output",
        "all": true
    }
}